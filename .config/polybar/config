;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
top-background = #90000000
top-foreground = #90ffffff

primary = #ffb52a
secondary = #e60053
shaded = #15ffffff
alert = #bd2c40
highlight = #553035

blue = #0092fc
yellow = #ECFF2B
orange = #EC8B19
red = #EA0032
grey = #9E9E9E

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/topbar]
monitor = ${env:MONITOR:eDP-1-1}
width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.top-background}
foreground = ${colors.top-foreground}

line-size = 2

border-size = 0
border-color = #00000000

padding-top = 5
padding-left = 4
padding-right = 4

module-margin-left = 3
module-margin-right = 3
separator = |

;font-0 = Source Code Pro:size=12:weight=bold;2
font-0 = Cantarell:size=11:weight=bold;2

modules-left =  i3
modules-center = date
modules-right = pulseaudio-control wlan powermenu

tray-position = right
tray-padding = 4
tray-detached = false

wm-restack = i3

override-redirect = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
enable-scroll = false
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 4
label-mode-foreground = ${bar/topbar.foreground}
label-mode-background = ${bar/topbar.background}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-font = 1
label-focused-background = ${bar/topbar.background}
label-focused-underline = ${colors.blue}
label-focused-padding = 4

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-font = 1
label-unfocused-padding = 4
label-unfocused-underline = ${colors.grey}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-font = 1
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 4

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> 
format-prefix = 1
format-disconnected = <label-disconnected>
label-disconnected = "WiFi Off"
label-disconnected-font = 1
label-disconnected-foreground = ${bar/topbar.foreground}

ramp-signal-0 = "WiFi On"
ramp-signal-1 = "WiFi On"ï‹¢
ramp-signal-2 = "WiFi On"
ramp-signal-font = 1

[module/date]
type = internal/date
interval = 1

date = " %a %e %b"
date-alt = " %Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

format = <label>
label = %date% %time%
label-font = 1

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%

exec = ~/.config/polybar/pulseaudio-control.sh --listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/pulseaudio-control.sh --togmute
scroll-up = ~/.config/polybar/pulseaudio-control.sh --up
scroll-down = ~/.config/polybar/pulseaudio-control.sh --down

label-foreground = ${colors.top-foreground}
label-font = 1

[module/powermenu]
type = custom/menu
expand-right = false

label-open = Power
label-close = Cancel
label-separator = "<"
label-separator-padding = 4

menu-0-0 = Shutdown
menu-0-0-exec = systemctl poweroff
menu-0-1 = Reboot
menu-0-1-exec = systemctl reboot
menu-0-2 = Hibernate
menu-0-2-exec = systemctl hibernate
menu-0-0-foreground = ${colors.red}
menu-0-1-foreground = ${colors.orange}
menu-0-2-foreground = ${colors.yellow}

[settings]
screenchange-reload = true
